<script>
import wepy from 'wepy'

export default class aboutus extends wepy.page {
  config = {};
  components = {};

  data = {
    tab1: true,
    tab2: false,
    tab3: false
  };
  methods = {
    tabSwitch: function(e) {
      var tabs = ['tab1', 'tab2', 'tab3']
      for (var i = 0; i < tabs.length; i++) {
        if (tabs[i] === e.target.id) this[tabs[i]] = true
        else this[tabs[i]] = false
      }
      this.$apply()
    }
  };

  events = {

